{
  "name": "contriboot-2019",
  "version": "0.0.1",
  "description": "Contributions & Interests",
  "scripts": {
    "start": "concurrently 'npm run watch' 'http-server -o'",
    "watch": "npm run clean && concurrently 'npm run watch:css' 'npm run watch:js'",
    "watch:js": "watchify -v  -t aliasify -t [ babelify --presets [ @babel/preset-env @babel/preset-react ] ] assets/scripts/main.jsx -o static/main.js ",
    "watch:css": "stylus --inline --watch --sourcemap-inline -u autoprefixer-stylus assets/styles/main.styl -o static",
    "watch:images": "npm run build:images && watch-run -p 'assets/images/*' npm run build:images",
    "clean": "rm -rf static && mkdir static",
    "clean:images": "rm -rf static/images && mkdir static/images",
    "lint": "eslint ./assets/scripts",
    "copy:dist": "rm -rf build && mkdir -p build && cp index.html build && cp -r static build",
    "build": "npm run clean && npm run build:css && npm run build:js && npm run copy:dist",
    "build:js": "browserify assets/scripts/main.jsx -t aliasify -t [  babelify --presets [ @babel/preset-env @babel/preset-react ] ] | uglifyjs > static/main.js",
    "build:css": "stylus --inline --compress -u autoprefixer-stylus assets/styles/main.styl -o static",
    "build:images": "npm run clean:images && cp -r assets/images/* static/images/"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "aliasify": "^2.1.0",
    "autoprefixer-stylus": "^0.14.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "concurrently": "^4.1.0",
    "firebase": "^5.7.3",
    "http-server": "^0.11.1",
    "marked": "^0.6.0",
    "preact": "^8.4.2",
    "preact-compat": "^3.18.4",
    "react-markdown": "^4.0.6",
    "react-medium-editor": "^1.8.1",
    "react-spinner": "^0.2.7",
    "reactfire": "^1.0.0",
    "stylus": "^0.54.5",
    "stylus-normalize": "^3.0.3",
    "to-markdown": "^3.1.1",
    "watch-run": "^1.2.5",
    "watchify": "^3.11.0"
  },
  "aliasify": {
    "aliases": {
      "react": "preact-compat",
      "react-dom": "preact-compat"
    }
  }
}
